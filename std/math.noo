add = fn x y => x + y;
subtract = fn x y => x - y;
multiply = fn x y => x * y;
divide = fn x y => x / y;
abs = fn x => if x < 0 then -x else x;
max = fn x y => if x > y then x else y;
min = fn x y => if x < y then x else y;
square = fn x => x * x;
pow = fn x => fn y => if y == 0 then 1 else x * ((pow x) (y - 1));
math = {
  @add add;
  @subtract subtract;
  @multiply multiply;
  @divide divide;
  @abs abs;
  @max max;
  @min min;
  @square square;
  @pow pow;
};
math 