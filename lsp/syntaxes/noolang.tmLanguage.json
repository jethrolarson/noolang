{
  "name": "Noolang",
  "scopeName": "source.noolang",
  "fileTypes": ["noo"],
  "patterns": [
    {
      "name": "comment.line.number-sign.noolang",
      "match": "#.*$"
    },
    {
      "name": "string.quoted.double.noolang",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "constant.numeric.noolang",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "keyword.control.noolang",
      "match": "\\b(if|then|else|fn|mut|mut!|match|with|type)\\b"
    },
    {
      "name": "entity.name.constructor.noolang",
      "match": "\\b(True|False|None|Some|Ok|Err)\\b"
    },
    {
      "name": "keyword.operator.noolang",
      "match": "\\b(\\+|\\-|\\*|/|==|!=|<|>|<=|>=|=|;|\\||\\|>|\\$)\\b"
    },
    {
      "name": "entity.name.tag.accessor.noolang",
      "match": "(@\\w+)"
    }
  ]
}
