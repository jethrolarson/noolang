{
  "name": "noolang-lsp",
  "displayName": "Noolang Language Server",
  "description": "LSP support for Noolang programming language",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jethrolarson/noolang.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:noolang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "noolang",
        "aliases": [
          "Noolang",
          "noolang"
        ],
        "extensions": [
          ".noo"
        ]
      }
    ],
    "configuration": {
      "title": "Noolang LSP",
      "properties": {
        "noolang.enableLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Enable the Noolang language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && tsc -p ./server",
    "watch": "tsc -watch -p ./ & tsc -watch -p ./server"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-uri": "^3.0.8"
  }
}