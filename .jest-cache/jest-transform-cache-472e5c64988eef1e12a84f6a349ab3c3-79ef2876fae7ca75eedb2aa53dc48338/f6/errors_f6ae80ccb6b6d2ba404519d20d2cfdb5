const createError = (type, message, location, context, suggestion) => ({
    type,
    message,
    location,
    context,
    suggestion,
});
exports.createError = createError;
function errorToString(error) {
    let result = `${error.type}: ${error.message}`;
    if (error.location) {
        result += ` at line ${error.location.line}, column ${error.location.column}`;
    }
    if (error.context) {
        result += `\nContext: ${error.context}`;
    }
    if (error.suggestion) {
        result += `\nSuggestion: ${error.suggestion}`;
    }
    return result;
}
const errorToJSON = (error) => JSON.stringify(error, null, 2);
exports.errorToJSON = errorToJSON;
