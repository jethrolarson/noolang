# Test defining Option and Result as user ADTs (clean version)

# Define Option type
type Option a = Some a | None;

# Test Option usage with integers only
my_some = Some 42;
my_none = None;

# Pattern matching on user-defined Option
handle_option = fn opt => match opt with (
  Some value => value * 2;
  None => 0
);

result1 = handle_option my_some;
result2 = handle_option my_none;

# Final result
{ @some_result result1, @none_result result2 }