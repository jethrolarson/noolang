{
  "name": "noolang",
  "version": "0.1.0",
  "description": "An expression-based, LLM-friendly programming language",
  "main": "dist/repl.js",
  "scripts": {
    "build": "tsc",
    "start": "bun src/cli.ts",
    "start:debug": "bun --inspect src/cli.ts",
    "start:debug-brk": "bun --inspect-brk src/cli.ts",
    "test": "AGENT=1 bun test",
    "test:watch": "bun test --watch",
    "test:bail": "AGENT=1 bun test --bail",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
    "typecheck:all": "bun run typecheck",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint src/**/*.ts --fix",
    "test:repl-automation": "bun scripts/test-repl-automation.ts",
    "test:repl-simple": "node scripts/simple-repl-test.js",
    "test:lsp": "cd lsp && cargo test",
    "test:lsp-build": "cd lsp && cargo build --release",
    "test:all": "bun test && bun run test:repl-simple && bun run test:lsp",
    "test:all-repl": "bun run test:repl-simple && bun run test:repl-automation",
    "test:fast": "bun test",
    "test:uvu:single": "uvu test/type-system adt_limitations.uvu.ts --require tsx/cjs",
    "test:uvu:coverage": "c8 --reporter=text --reporter=html --reporter=lcov uvu test --require tsx/cjs",
    "test:uvu:watch": "uvu test --require tsx/cjs --watch",
    "benchmark": "bun run build && node benchmark.js",
    "benchmark:repl": "bun run build && node benchmark.js --repl",
    "benchmark:all": "bun run build && node benchmark.js && bun run benchmark:repl",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.ts\" \"*.js\" \"*.json\"",
    "mcp:provider": "bun scripts/mcp-provider.ts",
    "mcp:probe": "node -e \"(async()=>{const cp=require('node:child_process').spawn('bun',['scripts/mcp-provider.ts']);cp.stdin.write(JSON.stringify({jsonrpc:'2.0',id:1,method:'tools/list',params:{}})+'\\n');cp.stdout.on('data',d=>{console.log(String(d));cp.kill();});})();\"",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish"
  },
  "keywords": [
    "programming-language",
    "interpreter",
    "typescript",
    "vscode-extension"
  ],
  "author": "",
  "publisher": "noolang",
  "license": "MIT",
  "bin": {
    "noo": "dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:noolang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "noolang",
        "aliases": [
          "Noolang",
          "noolang"
        ],
        "extensions": [
          ".noo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "noolang",
        "scopeName": "source.noolang",
        "path": "./syntaxes/noolang.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@eslint/js": "^9.31.0",
    "@swc/core": "^1.13.1",
    "@types/bun": "^1.2.19",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/vsce": "^2.15.0",
    "c8": "^10.1.3",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "uvu": "^0.5.6"
  }
}