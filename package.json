{
  "name": "noolang",
  "version": "0.1.0",
  "description": "An expression-based, LLM-friendly programming language",
  "main": "dist/repl.js",
  "scripts": {
    "build": "tsc",
    "start": "npx ts-node src/cli.ts",
    "dev": "ts-node src/repl.ts",
    "cli": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.ts\" \"*.js\" \"*.json\"",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish"
  },
  "keywords": [
    "programming-language",
    "interpreter",
    "typescript",
    "vscode-extension"
  ],
  "author": "",
  "publisher": "noolang",
  "license": "MIT",
  "bin": {
    "noo": "dist/cli.js"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:noolang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "noolang",
        "aliases": [
          "Noolang",
          "noolang"
        ],
        "extensions": [
          ".noo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "noolang",
        "scopeName": "source.noolang",
        "path": "./syntaxes/noolang.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.8.3"
  }
}
